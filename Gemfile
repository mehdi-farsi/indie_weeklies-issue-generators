# frozen_string_literal: true

source "https://rubygems.org"

gem "faraday"       # HTTP client
gem "nokogiri"      # HTML/XML parsing for scraping
gem "json"          # JSON handling
gem "thor"          # CLI framework
gem "dotenv"        # Environment variable management
gem "zeitwerk"      # Code loader

group :development, :test do
  gem "rspec"       # Testing framework
  gem "vcr"         # Record HTTP interactions for tests
  gem "webmock"     # HTTP request stubbing for tests
end